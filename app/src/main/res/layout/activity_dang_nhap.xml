<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/logodangnhap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DangNhapActivity">
    <LinearLayout
        android:background="@color/transparentbackgrounddangnhap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/foodytext"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="100dp" />
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_emaildangnhap"
            android:drawableLeft="@drawable/ic_perm_identity_white_24dp"
            android:drawablePadding="10dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Email đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_passworddn"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_dangnhap"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:textAllCaps="false"
            android:text="Đăng nhập"
            android:textColor="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/ic_exit"
            android:background="@drawable/radius_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorAccent"
                android:text="Hoặc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_dangnhapgoogle"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:textAllCaps="false"
            android:textColor="@color/dotham"
            android:text="Đăng nhập bằng Google"
            android:drawableLeft="@drawable/icon_google"
            android:background="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>
        <RelativeLayout
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_quenmatkhau"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:text="Quên mật khẩu ?"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/txt_dangkimoi"
                android:layout_marginRight="2dp"
                android:textColor="@android:color/white"
                android:text="Đăng kí"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>